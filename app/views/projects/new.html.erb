<div class="content">
  <div class="container-sm">
    <%= link_to content_tag(:i, (), class: 'fa fa-arrow-left') + ' Back', projects_path, class: 'btn btn-blue' %>
    <h1>Setup a new project</h1>
    <%= form_for @project do |f| %>
      <div class="well">
        <h3>Project Settings</h3>
        <div class="field">
          <%= f.label 'Project name' %>
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label 'Project description' %>
          <%= f.text_area :description, rows: 5 %>
        </div>
      </div>
      <%= f.fields_for :teams, @team do |t| %>
        <div class="well">
          <h3>Team settings</h3>
          <div class="field">
            <%= t.label 'Team name' %>
            <%= t.text_field :name %>
          </div>
        </div>
        <%= t.fields_for :roles, @role do |r| %>
          <div class="well">
            <h3>Role settings</h3>
            <div class="field">
              <%= r.label 'Role name' %>
              <%= r.text_field :name %>
            </div>
            <div class="field">
              <%= r.label 'Role description' %>
              <%= r.text_area :description, rows: 2 %>
            </div>
          </div>
        <% end %>
      <% end %>
      <div class="actions">
        <%= f.submit class: 'btn btn-blue' %>
      </div>
    <% end %>
  </div>

</div>
